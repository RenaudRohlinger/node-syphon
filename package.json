{
  "name": "root",
  "private": true,
  "workspaces": [
    "lib/**/*",
    "examples/**/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "update": "lernaupdate",
    "test": "lerna run test --",
    "modules:clean": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "modules:reinstall": "yarn modules:clean && yarn install"
  },
  "devDependencies": {
    "lerna": "^4.0.0",
    "lerna-update-wizard": "^1.1.2"
  }
}
